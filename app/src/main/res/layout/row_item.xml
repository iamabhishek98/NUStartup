<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/postLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

    <TextView
        android:id="@+id/startUpName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Googlup StartDown"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postLogo"
        app:layout_constraintTop_toTopOf="@+id/postLogo" />

    <TextView
        android:id="@+id/startUpCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:text="Yahuu Pte Ltd"
        app:layout_constraintEnd_toEndOf="@+id/startUpName"
        app:layout_constraintStart_toStartOf="@+id/startUpName"
        app:layout_constraintTop_toBottomOf="@+id/startUpName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/loc"
        android:drawablePadding="5dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center_vertical"
        android:text="East"
        app:layout_constraintEnd_toEndOf="@+id/startUpCompanyName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/startUpCompanyName"
        app:layout_constraintTop_toBottomOf="@+id/startUpCompanyName" />
</androidx.constraintlayout.widget.ConstraintLayout>